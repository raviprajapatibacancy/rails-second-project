<h1>Edit Book Detail</h1>

<%= form_for @book, :url =>{:action => "update", :id =>@book} do |f| %>

<p>Title: <%= f.text_field 'title', class: 'form-control' %></p>
<p>Price: <%= f.text_field  'price', class: 'form-control' %></p>
<p>Subject: <%= f.collection_select :subject_id, Subject.all, :id, :name, {:prompt=> true}, {:class=>'form-control'} %></p>
<p>Subject: <%= f.collection_select :author_id, Author.all, :id, :name, {:prompt=> true}, {:class=>'form-control'} %></p>
<p>Description<br/>

<%= f.text_area 'description',class: 'form-control' %></p>
<%= f.submit "Save changes" %>
<% end %>

<%= link_to 'Back', {:action => 'list' } %>